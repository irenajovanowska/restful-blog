<%- include("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header title"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="ui item segment">
            <img class="ui centered round image" src="<%= blog.image %> " alt="">
        </div>
        <div class="ui content">
            <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="ui description segment">
            <p><%- blog.body %> </p>
        </div>
        <a class="ui green basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui red basic button" type="submit">Delete</button>
        </form>
    </div>
</div>

<%- include("partials/footer")  %>